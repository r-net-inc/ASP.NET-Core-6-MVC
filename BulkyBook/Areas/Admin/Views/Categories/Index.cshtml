@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<partial name="_Notifications" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="col-5">
                    Name
                </th>
                <th class="col-2 text-center">
                    Display Order
                </th>
                <th class="col-2 text-center">
                    Created Date
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td class="text-center">
                        @category.DisplayOrder
                    </td>
                    <td class="text-center">
                        @category.CreatedDateTime.ToShortDateString()
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger mx-2 js-delete" data-category-id="@category.Id"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>    
</div>

@section Scripts
{
    <script src="~/js/bootbox.min.js"></script>
    <script>
        $(document).on('click', '.js-delete', function () {
            var button = $(this);

            bootbox.confirm({
                title: 'Delete Category?',
                message: 'Are you sure you want to delete this category?',
                buttons: {
                    cancel: {
                        label: '<i class="bi bi-x-square"></i>&nbsp; No',
                        className: 'btn-success'
                    },
                    confirm: {
                        label: '<i class="bi bi-check-square"></i>&nbsp; Yes',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location.assign("/Admin/Categories/Delete/" + button.attr("data-category-id"));
                    }
                }
            });
        })
    </script>
}