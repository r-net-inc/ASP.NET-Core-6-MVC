@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Cover Type";
}

<partial name="_Notifications" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverTypes" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="col-8">
                    Cover Type Name
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coverType in Model)
            {
                <tr>
                    <td>
                        @coverType.Name
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="CoverTypes" asp-action="Edit" asp-route-id="@coverType.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger mx-2 js-delete" data-coverType-id="@coverType.Id"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>    
</div>

@section Scripts
{
    <script src="~/js/bootbox.min.js"></script>
    <script>
        $(document).on('click', '.js-delete', function () {
            var button = $(this);

            bootbox.confirm({
                title: 'Delete Cover Type?',
                message: 'Are you sure you want to delete this cover type?',
                buttons: {
                    cancel: {
                        label: '<i class="bi bi-x-square"></i>&nbsp; No',
                        className: 'btn-success'
                    },
                    confirm: {
                        label: '<i class="bi bi-check-square"></i>&nbsp; Yes',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location.assign("/Admin/CoverTypes/Delete/" + button.attr("data-coverType-id"));
                    }
                }
            });
        })
    </script>
}