@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Cover Types";
}

<partial name="_Notifications" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverTypes" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="col-8">
                    Name
                </th>
                <th class="col-4">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coverType in Model)
            {
                <tr>
                    <td>
                        @coverType.Name
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="CoverTypes" asp-action="Upsert" asp-route-id="@coverType.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger mx-2 js-delete" data-coverType-id="@coverType.Id"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>    
</div>

@section Scripts
{
    <script>
        $(document).on('click', '.js-delete', function () {
            let button = $(this);

            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this cover type!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((result) => {
                if (result) {
                    $.ajax({
                        url: '/Admin/CoverTypes/Delete/' + button.attr("data-coverType-id"),
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                dataTable.ajax.reload();
                                toastr.success(data.message);
                            }
                            else {
                                toastr.error(data.message);
                            }
                        }
                    })
                }
            })
        })
    </script>
}