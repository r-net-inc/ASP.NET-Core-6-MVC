@{
    ViewData["Title"] = "Products";
}

<partial name="_Notifications" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />
    <table id="products" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>ISBN</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
    {
    <script src="~/js/bootbox.min.js"></script>
    <script>
        $(document).on('click', '.js-delete', function () {
            var button = $(this);

            bootbox.confirm({
                title: 'Delete Product?',
                message: 'Are you sure you want to delete this product?',
                buttons: {
                    cancel: {
                        label: '<i class="bi bi-x-square"></i>&nbsp; No',
                        className: 'btn-success'
                    },
                    confirm: {
                        label: '<i class="bi bi-check-square"></i>&nbsp; Yes',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location.assign("/Admin/Products/Delete/" + button.attr("data-product-id"));
                    }
                }
            });
        })
    </script>
}