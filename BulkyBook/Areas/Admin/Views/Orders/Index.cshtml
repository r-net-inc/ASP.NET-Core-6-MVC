@model IEnumerable<OrderHeader>
@{
    ViewData["Title"] = "Orders";
}

<partial name="_Notifications" />

<div class="p-3">
    <div class="d-flex justify-content-between pt-4">
        <div class="p-2">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="p-2">
            <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Order
            </a>
        </div>
    </div>
    <br /><br />
    <table id="orders" class="display" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/orders.js"></script>
}